<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.eteng.nhw360" version="0.0.19">

  <name>农惠网</name>
  <description>
    中国农资旗下电商
  </description>
  <author email="hr@e-teng.com.cn" href="http://cordova.io">
    北京易腾时代科技有限公司
  </author>

  <icon src="www/img/icon.png"/>
  <splash src="www/img/splash.png"/>

  <content src="index.html"/>

  <access origin="*"/>
  <allow-navigation href="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>

  <engine name="android" spec="^4.0.0"/>
  <engine name="ios" spec="^3.8.0"/>

  <preference name="BackgroundColor" value="0xffffffff"/>

  <platform name="android">
    <allow-intent href="market:*"/>
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="10000"/>
    <preference name="AndroidLaunchMode" value="singleTop"/>
  </platform>

  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>

    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="www/img/ios/Icon-60@3x.png" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="www/img/ios/Icon-60.png" width="60" height="60" />
    <icon src="www/img/ios/Icon-60@2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon src="www/img/ios/Icon-76.png" width="76" height="76" />
    <icon src="www/img/ios/Icon-76@2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <!-- <icon src="www/img/ios/Icon-40.png" width="40" height="40" />
    <icon src="www/img/ios/Icon-40@2x.png" width="80" height="80" /> -->
    <!-- iPhone / iPod Touch -->
    <icon src="www/img/ios/Icon.png" width="57" height="57" />
    <icon src="www/img/ios/Icon@2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon src="www/img/ios/Icon-72.png" width="72" height="72" />
    <icon src="www/img/ios/Icon-72@2x.png" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="www/img/ios/Icon-small.png" width="29" height="29" />
    <icon src="www/img/ios/Icon-small@2x.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <!-- <icon src="www/img/ios/Icon-50.png" width="50" height="50" />
    <icon src="www/img/ios/Icon-50@2x.png" width="100" height="100" /> -->
  </platform>

  <plugin name="cordova-plugin-crosswalk-webview" spec="^1.2.0"/>
  <plugin name="cordova-plugin-whitelist" spec="^1.0.0"/>
  <plugin name="cordova-plugin-splashscreen" spec="^2.0.0"/>
  <plugin name="cordova-plugin-device" spec="^1.0.0"/>
  <plugin name="com.disusered.open" spec="https://github.com/disusered/cordova-open.git"/>
  <plugin name="uk.co.whiteoctober.cordova.appversion" spec="https://github.com/whiteoctober/cordova-plugin-app-version.git"/>
  <plugin name="nl.x-services.plugins.launchmyapp" spec="https://github.com/EddyVerbruggen/LaunchMyApp-PhoneGap-Plugin.git">
    <variable name="URL_SCHEME" value="eteng"/>
  </plugin>
</widget>
